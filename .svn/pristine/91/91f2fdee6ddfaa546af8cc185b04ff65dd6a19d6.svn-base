$(document).ready(function(){
    $(".form-check-input").click(function(){
        var valores_cat = [];
        $(".form-check-input:checked").each(function(i){
          valores_cat[i] = $(this).val();
       }); 
       
       $.ajax({
           method: "POST",
           url: "filtrarPorCategoria",
           data: {"categorias" : valores_cat.toString()},
           dataType: "json",
           success: function(produtos){
               $(".carousel1").html("");
               for(var i=0; i<produtos["data"].length; i++){
                   $(".carousel1").append("\
                           <div class='card col-md-3' style='max-width:18rem;'>\
                                    <div class='thumb-wrapper'>\
                                        <div class='img-box'>\
                                            <img id='imagem' src='RecuperarImagem?codigo=${"+produtos["data"][i]["codigo"]+"}'> \
                                        </div>\
                                        <div class='thumb-content'>\
                                            <h4>"+produtos["data"][i]["nomeProduto"]+"</h4>\
                                            <p class='item-price'> <span>"+produtos["data"][i]["preco"]+"</span></p> <a class='btn btn-primary' href='#'>Add to Cart</a></div></div> \
                                    </div> "
                   );
               }
           } 
       });
    });
    
});